@model BoxOfCourses.Models.Email

@{
    ViewBag.Title = "SendEmail";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="email-form container">
        <h1 class="contact-heading-h1">Let's <span class="contact-heading-span">get in touch</span>! 👋</h1>
        <p class="contact-us-text">You have an idea, any question, or maybe you want to report problem? <span style="color: #5ABD64;" class="contact-me-label-heading">Contact me</span>.  <ion-icon style="color: orange; width: 25px; height: 28px;" name="flash"></ion-icon> </p>
        <div class="row">
            <div class="col-md-6">
                <div class="form-horizontal email-contanct-form">
                    @using (Html.BeginForm("SendEmail", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "email-form" }))
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control modelSubject", placeholder = "ex. Report problem", id = "modelSubject" } }) <small style="color: white;">*<span style="color: #C126EA;">optional</span></small>
                                @* @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })*@
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.Body, new { rows = "3", cols = "20", @class = "form-control modelBody", placeholder = "Message", id = "modelBody" })
                                @*accept = ".jpg, .jpeg, .gif, .png"*@
                                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Attachment, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="file-input">
                                    @Html.TextBoxFor(model => model.Attachment, new { type = "file", name = "file-input", @class = "file-input__input", id = "file-input" })
                                    <label class="file-input__label" for="file-input">
                                        <svg aria-hidden="true"
                                             focusable="true"
                                             data-prefix="fas"
                                             data-icon="upload"
                                             class="svg-inline--fa fa-upload fa-w-16"
                                             role="img"
                                             @*xmlns="http://www.w3.org/2000/svg"*@
                                             viewBox="0 0 512 512">
                                            <path fill="currentColor"
                                                  d="M296 384h-80c-13.3 0-24-10.7-24-24V192h-87.7c-17.8 0-26.7-21.5-14.1-34.1L242.3 5.7c7.5-7.5 19.8-7.5 27.3 0l152.2 152.2c12.6 12.6 3.7 34.1-14.1 34.1H320v168c0 13.3-10.7 24-24 24zm216-8v112c0 13.3-10.7 24-24 24H24c-13.3 0-24-10.7-24-24V376c0-13.3 10.7-24 24-24h136v8c0 30.9 25.1 56 56 56h80c30.9 0 56-25.1 56-56v-8h136c13.3 0 24 10.7 24 24zm-124 88c0-11-9-20-20-20s-20 9-20 20 9 20 20 20 20-9 20-20zm64 0c0-11-9-20-20-20s-20 9-20 20 9 20 20 20 20-9 20-20z"></path>
                                        </svg>
                                        <span>Upload file</span>
                                    </label>
                                    <span style="color: #5ABD64; font-size: 15px;" class="file-name"></span>
                                </div>
                                <small style="color: white;">*<span style="color: #C126EA;">optional</span></small>
                                @*@Html.TextBoxFor(model => model.Attachment, new { type = "file", @class = "modelAttachFile", id = "modelAttachment" }) <small style="color: white;">*<span style="color: #C126EA;">optional</span></small>*@
                                @* @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })*@
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.EmailFrom, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.EmailFrom, new { htmlAttributes = new { @class = "form-control modelEmailFrom", placeholder = "ex. someone@gmail.com", id = "modelEmail" } })
                                @* @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })*@
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { type = "password", @class = "form-control modelPassword", id = "modelPassword" } })
                                @* @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })*@
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                               @* <div class="form-group submit-form-field">
                                    <input id="submitEmailForm" type="submit" value="Send" class="btn btn-success text-center" style="color:black; width: 160px" />
                                </div>*@
                                 <input  id="submitEmailForm" type="submit" value="Send" class="btn custom-send-button"/>
                            </div>
                        </div>
                    }
                </div>
            </div>

            @*from here hover field starts for the photo*@
            <div class="row">
                <div class="col-md-6">
                    <figure class="snip1218">
                        <div class="image">
                            <img src="~/Content/photos/creator.jpg" style="height: 330px; width: 310px;" alt="sample70" />
                            <p style="font-size: 18px;">
                                I'm Ljupcho Dimitriev, student at FCSE - Faculty of computer science and engineering, in Skopje. Currently studying application of information technologies.
                            </p>
                        </div>
                        <figcaption style="height: 150px;">
                            <h3>Ljupcho<span> Dimitriev</span></h3>
                            <h5 style="font-size: 15px; font-weight: 700;">Student and developer <span style="color: #C126EA;">in progress</span></h5>
                            <div class="icons">
                                <a href="https://www.facebook.com/dimitrievlj/" target="_blank"><ion-icon style="width: 30px; height: 30px;" name="logo-facebook"></ion-icon></a>
                                <a href="https://www.youtube.com/channel/UC7PLY3IjQhLi-dngwrojPKw" target="_blank"><ion-icon style="width: 30px; height: 30px; color: red;" name="logo-youtube"></ion-icon></a>
                                <a href="https://www.instagram.com/dimitrievlj/" target="_blank"><ion-icon style="width: 30px; height: 30px; color: #fb3958;" name="logo-instagram"></ion-icon></a>
                            </div>
                        </figcaption>
                    </figure>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="email-message-container-success hide-div">
                    <p style="color: green;"class="message-success" msgsuccess="@ViewBag.Message">@ViewBag.Message</p>
                </div>
                <div class="email-message-container-error hide-div ">
                    <p style="color: green"; class="message-error" msgerror="@ViewBag.errorMsg">@ViewBag.errorMsg</p>
                </div>
            </div>
        </div>

        <div>
            @ViewBag.InvalidEmail
        </div>
    </div>
</body>
</html>

@section scripts{
    <script>
        $(".hide-div").hide();

        $(window).on("load", function () {
            $("#submitEmailForm").prop("disabled", true);
            var currentMessage = $(".message-success").attr("msgsuccess");
            if (currentMessage === "Your email has been sent!") {
                Swal.fire({
                    icon: 'success',
                    title: 'Your email has been sent!',
                    showConfirmButton: false,
                    timer: 2500
                })
                $(".modelSubject").val("");
                $(".modelPassword").val("");
                $(".modelEmailFrom").val("");
                $(".modelBody").val("");
            }

            var messageError = $(".message-error").attr("msgerror");
            if (messageError === "Something went wrong, make sure you entered valid google email!") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong, make sure you entered valid google email!'
                })
            }
        })

        $(window).keyup(function () {
            if ($(".modelEmailFrom").val().includes("@@gmail.com") && $(".modelPassword").val() !== "" && $(".modelBody").val() !== "") {
                $("#submitEmailForm").prop("disabled", false);
            } else {
                $("#submitEmailForm").prop("disabled", true);
            }
        })

        @*script to get current name of file for upload*@
        $('#file-input').change(function () {
          @* 
            var i = $(this).prev('label').clone();
            console.log(i);*@
            var file = $('#file-input')[0].files[0].name;
            console.log(file);
            $(this).prev('label').text(file);
            $(".file-name").text(file);
        });
    </script>
}

