@using BoxOfCourses.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="container cont-login">
    <div class="row">
        <div class="col-md-5">
            <img class="login-gif img-responsive" src="~/Content/photos/login-gif.gif" />
        </div>
        <div class="col-md-7 container-form">
            <section id="loginForm">
                <h1 class="login-heading">Here to get <span class="text-green-login-welcome">welcomed</span>!</h1>
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @*<h4>Use a local account to log in.</h4>*@

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label text-green-login-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder ="ex. someone@gmail.com" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label text-green-login-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe, new { @class = "label-remember-me" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Log in" class="btn btn-success custom-login-button"  />
                        </div>
                    </div>
                    <p style="margin-top: 50px;">
                        <span style="margin-left: 8%; color: #5ABD64;">Don't have an account yet?</span> <br />
                        <a class="register-as-new-user" href="~/Account/Register">Register as a new user</a>
                        @*@Html.ActionLink("Register as a new user", "Register")*@
                    </p>
                     @*Enable this once you have account confirmation enabled for password reset functionality
            <p>
                @Html.ActionLink("Forgot your password?", "ForgotPassword")
            </p>*@
                }
            </section>
        </div>
        @*<div class="col-md-4">
                <section id="socialLoginForm">
                    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                </section>
            </div>*@
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    .cont-login {
        margin-top: 120px;
        margin-bottom: 60px;
    }

    .login-heading {
        color: white;
        font-size: 60px;
        font-weight: 700;
        margin-bottom: 30px !important;
        text-align: center;
    }

    .login-heading-small {
        font-size: 20px;
    }

    .login-gif {
        height: 400px;
        width: 500px;
        border-radius: 50px;
        border: 5px solid #C126EA;
    }
    #loginForm{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
    }
    .text-green-login-label {
        color: #5ABD64;
        margin-right: 10px;
    }
    .text-green-login-welcome {
        color: #5ABD64;
    }
    .register-as-new-user{
        color: orange!important;
        text-decoration: none!important;
        margin-left: 5%;
        font-size: 20px;
    }
    .label-remember-me {
        color: #C126EA;
        font-size: 16px;
    }
    .login-button{
        color: black!important;
    }

    .form-control {
        background-color: #303b51;
        color: white;
        border: 1px solid #5ABD64;
    }

    .custom-login-button {
        color: #5ABD64;
        background-color: #303641;
        width: 100px;
        border-radius: 0;
        margin-left: 5%;
    }

    @*css form not changing background-color of input field while selecting one of previous used emails*@
    input:-webkit-autofill,
    input:-webkit-autofill:hover,
    input:-webkit-autofill:focus,
    input:-webkit-autofill:active {
        transition: background-color 5000s ease-in-out 0s;
        -webkit-text-fill-color: white;
    }
</style>