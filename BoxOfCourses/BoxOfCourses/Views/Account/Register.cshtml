@model BoxOfCourses.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container cont">
    <h1 class="register-heading">@ViewBag.Title,</h1>

    <h3 class="Create-Account-heading">create a new account</h3>
    <h4 class="skill-up">and Skill up</h4>
    <hr class="hr-register-heading" />
   
    <div class="form-container-center">
        <div class="form-center">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal form-center", role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group form-center ">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2  control-label text-green-register-label"})
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control " })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label text-green-register-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control " })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label text-green-register-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" class="btn btn-success register-button " value="Register" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    .cont {
        padding-top: 20px;
        text-align: center;
        margin-top: 50px;
    }
    .form-container-center{
        margin:auto;
        width: 450px;
        padding: 10px;
    }
    .register-button{
        width: 170px;
    }

    .Create-Account-heading {
        color: #5ABD64;
        font-size: 35px;
        font-weight: 700;
    }

    .register-heading{
        color: white;
    }
    .skill-up {
        color: #C126EA;
        font-size: 20px;
    }

    .text-green-register-label {
        color: #5ABD64;
    }

    input[type=submit] {
        margin-left: 3.4em;
        height: 2.8em;
        padding: 0.2em 1em 0.2em 2.30em;
        font-size: 1em;
        font-weight: bold;
        font-family: "Open Sans";
        text-transform: uppercase;
        color: #5ABD64;
        background: url(https://i.imgur.com/Th606mh.png) no-repeat scroll 0.75em 0.07em transparent;
        background-size: 28px 68px;
        border-radius: 2em;
        border: 0.15em solid #F9C23C;
        cursor: pointer;
        transition: all 0.3s ease 0s;
    }
    input[type="submit"]:hover {
        color: #fff;
        background-color: #EAA502;
        border-color: #EAA502;
        background-position: 0.75em bottom;
        -webkit-transition: all 0.3s ease;
        -ms-transition: all 0.3s ease;
        transition: all 0.3s ease;
    }
    input[type="submit"]:focus {
        background-position: 2em -4em;
        -webkit-transition: all 0.3s ease;
        -ms-transition: all 0.3s ease;
        transition: all 0.3s ease;
    }

    .hr-register-heading {
        border: 0.5px solid #303641;
    }

    .form-control {
        background-color: #303b51;
        color: white;
        border: 1px solid #5ABD64;
    }

    @*css form not changing background-color of input field while selecting one of previous used emails*@
    input:-webkit-autofill,
    input:-webkit-autofill:hover,
    input:-webkit-autofill:focus,
    input:-webkit-autofill:active {
        transition: background-color 5000s ease-in-out 0s;
        -webkit-text-fill-color: white;
    }
</style>
