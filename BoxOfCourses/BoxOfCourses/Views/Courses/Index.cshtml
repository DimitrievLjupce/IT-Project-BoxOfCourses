        <div>
            @{
                var courseJavaScript = "JavaScript";
                var listOfCourses = Model.ToList();
                var counterJavaScript = 0;
                var counterReact = 0;
                var counterAngular = 0;
                var counterCsharp = 0;
                foreach (var item in listOfCourses)
