<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page - BoxOfCourses</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .navbar {
            background-color: #1a202c;
            border-color: transparent;
        }

            .navbar li {
                color: #000
            }

        .contact-nav-a {
            color: #C126EA !important;
            font-size: 15px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .contact-nav-a, .reviews-nav-a, .allcourses-nav-a, #app-title {
            font-family: "Open Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", Helvetica, Arial, sans-serif;
        }

        .reviews-nav-a {
            color: #C126EA !important;
            font-size: 15px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .allcourses-nav-a {
            color: #C126EA !important;
            font-size: 15px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

            .allcourses-nav-a:hover, .reviews-nav-a:hover, .contact-nav-a:hover {
                color: #5ABD64 !important;
            }

        #app-title {
            font-size: 23px;
            letter-spacing: 1px;
        }

            #app-title:hover {
                color: #5ABD64 !important;
            }
    </style>

    <script>
        window.addEventListener('load', (event) => {
            console.log('page is fully loaded');
        });
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top navbar-default ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/Home/Index" class="logo-img-navbar"><img id="logo-navbar-a" src="~/Content/photos/logo-navbar.png" width="50" height="50" class="navbar-left" /></a>
                @Html.ActionLink("BoxOfCourses", "Index", "Home", new { area = "" }, new { id = "app-title", @class = "navbar-brand", style = "color:white" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("All Courses", "Index", "Courses")</li>*@
                    @*<li>@Html.ActionLink("Reviews", "Index", "ReviewModels")</li>*@
                    @*<li><a href="~/Courses/Index">About creator</a></li>*@
                    <li><a class="allcourses-nav-a" href="~/Courses/Index">All Courses</a></li>
                    <li><a class="reviews-nav-a" href="~/ReviewModels/Index">Reviews</a></li>
                    <li class="contact-nav"><a class="contact-nav-a" href="~/Home/SendEmail">Contact</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @*<div class="icon-bar text-right icon-bar-social-links">
             <a class ="social-links-icons-a icon-instagram" href="https://www.finki.ukim.mk/"><ion-icon class="icon-instagram" name="logo-instagram"></ion-icon></a>
             <a class ="social-links-icons-a" href="https://www.finki.ukim.mk/"><ion-icon class="icon-youtube" name="logo-youtube"></ion-icon></a>
             <a class ="social-links-icons-a" href="https://www.finki.ukim.mk/"><ion-icon class="icon-twitter" name="logo-twitter"></ion-icon></a>
             <a class ="social-links-icons-a" href="https://github.com/DimitrievLjupce"><ion-icon class="icon-github" name="logo-github"></ion-icon></a>

            @* <ion-icon name="logo-youtube"></ion-icon>
             <ion-icon name="logo-twitter"></ion-icon>*@
    </div>
    @RenderBody()
    <hr style="border: 0.5px solid #C126EA;" />
    <div class="container">
        <footer>
            <p class="footer-p"> <span class="dateTimeNowYear-footer">&copy; @DateTime.Now.Year </span>- Ljupcho Dimitriev </p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    @*za social links - embed scripts*@
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>

